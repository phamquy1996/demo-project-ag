const config = {
    uploader: {
      insertImageAsBase64URI: false, // Tắt việc insert hình ảnh dưới dạng base64
    },
    events: {
      afterPaste: (event, editorInstance) => {
        const clipboardData = (event.clipboardData || event.originalEvent.clipboardData);
        const items = clipboardData.items;

        for (let item of items) {
          if (item.type.indexOf('image') !== -1) {
            const file = item.getAsFile();
            const formData = new FormData();
            formData.append('file', file);

            // Sử dụng axios để upload file lên server
            axios.post('/upload-image', formData, {
              headers: {
                'Content-Type': 'multipart/form-data'
              }
            })
            .then(response => {
              // Lấy URL của hình ảnh từ response sau khi upload thành công
              const imageUrl = response.data.fileUrl; // Cấu trúc này sẽ thay đổi theo API của bạn

              // Chèn hình ảnh vào Jodit Editor
              editorInstance.s.insertImage(imageUrl);
            })
            .catch(error => {
              console.error("Upload hình ảnh thất bại: ", error);
            });
          }
        }
      }
    }
  };
